      <Label text="Welcome to JavaFX!">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <ImageView pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@bug.png" />
         </image>
      </ImageView>
   </children>
</VBox>
